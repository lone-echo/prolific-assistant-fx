{
  "manifest_version": 2,

  "name": "Prolific Assistant FX",

  "version": "2.0.5",

  "description": "Monitors https://prolific.ac/ for new studies. Firefox port of Prolific Assistant by Kadauchi",


  "icons": {
    "16": "prolific.png",
    "128": "prolific.png"
  },

  "browser_action": {
    "default_icon": "prolific.png",
    "default_title": "Prolific Assistant FX",
    "default_popup": "popup.html"
  },

  "author": "jurplel",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "*://*.prolific.ac/*"
  ],

  "short_name": "PA"
}
